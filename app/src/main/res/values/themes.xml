<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Wypozyczalnia" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/light_purple</item>
        <item name="colorPrimaryDark">@color/light_purple</item>
        <item name="colorAccent">@color/textColor</item>
    </style>

    <style name="BottomNavTextStyleActive">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavTextStyleInactive">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="RoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Theme.Wypozyczalnia" parent="Base.Theme.Wypozyczalnia" />

</resources>